<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_column_header_height"
                android:background="@color/primaryapp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/textlesswhite"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" android:id="@+id/text" android:text="Team"/>

    <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="@color/cell_background_color" />

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/cell_background_color" />
</RelativeLayout>