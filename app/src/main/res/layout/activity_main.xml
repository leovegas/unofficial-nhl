<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.app.unofficial_nhl.MainActivity"
        android:background="@color/background">

    <view android:layout_width="wrap_content" android:layout_height="wrap_content"
          class="androidx.constraintlayout.widget.Constraints" android:id="@+id/view2"/>
    <TextView
            android:text="NHL STATS INFO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView8"
            android:textSize="34sp" android:fontFamily="@font/rubik_bold"
            android:textColor="#FF6500" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="200dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textView8" android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:background="@drawable/navbar_background"/>
</androidx.constraintlayout.widget.ConstraintLayout>