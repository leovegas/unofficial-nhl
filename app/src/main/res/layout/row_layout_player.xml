<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="3dp"
>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cv"
                android:background="@drawable/corners" app:cardBackgroundColor="#00FFFFFF">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:background="@drawable/corners_teams_list" android:layout_gravity="center">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="20dp" android:id="@+id/positionLogo"
                            android:scaleType="fitCenter"
                            android:alpha="0.4"
                            android:layout_weight="0.8"
                            tools:srcCompat="@drawable/forward" android:padding="2dp"
                    />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:id="@+id/player_name"
                            android:textSize="14sp"
                            android:text="Ryan Reaves"
                            android:fontFamily="@font/rubik" android:textColor="#BEBCBABA"
                            android:layout_weight="0.5"
                            android:gravity="left" android:paddingStart="4dp"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:id="@+id/positionText"
                            android:textSize="14sp"
                            android:text="Center"
                            android:fontFamily="@font/rubik" android:textColor="#BEBCBABA"
                            android:layout_weight="0.6"
                            android:gravity="left" android:paddingStart="4dp"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:id="@+id/jerseyNumber"
                            android:textSize="14sp"
                            android:text="21"
                            android:fontFamily="@font/rubik_bold" android:textColor="#BEBCBABA"
                            android:layout_weight="0.8"
                            android:gravity="left" android:paddingStart="4dp"/>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>
