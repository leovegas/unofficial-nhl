<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.app.unofficial_nhl.ui.home.HomeFragment"
        android:background="@android:color/transparent" app:layoutDescription="@xml/fragment_home_scene">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/frameLayout11" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent">

        <SearchView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/corners" android:layout_marginTop="10dp"
                android:id="@+id/searchView">
            <TextView
                    android:text="NHL STATS INFO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView13"
                    android:textSize="34sp" android:fontFamily="@font/rubik_bold"
                    android:textColor="#FF6500"
            />
        </SearchView>
    </FrameLayout>
    <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/backgr"
            app:layout_constraintBottom_toTopOf="@+id/frameLayout11" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
    </ListView>
</androidx.constraintlayout.widget.ConstraintLayout>