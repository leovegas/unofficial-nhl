<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/container"
        android:layout_height="match_parent"
        tools:context="com.app.unofficial_nhl.MainActivity2"
        android:background="@color/background" app:layoutDescription="@xml/activity_main2_scene">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/linearLayout3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/frameLayout4"
                android:background="@drawable/corners10" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp" android:layout_weight="0.5" android:paddingTop="30dp"
                android:foreground="@drawable/overview" android:foregroundTint="#17FFFFFF"
                android:paddingBottom="10dp">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:foregroundTint="#20FFFFFF">
                <TextView
                        android:text="NHL JAN 23 5:00PM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/prestarttime"
                        android:fontFamily="@font/rubik" android:textColor="@color/textlesswhite"
                        android:layout_gravity="center_horizontal" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginBottom="10dp"/>
                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/frameLayout" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                        tools:layout_editor_absoluteY="628dp" android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp">

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:gravity="center">
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:layout_weight="0.45">
                            <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp" app:srcCompat="@drawable/main_logo"
                                    android:id="@+id/prelogo1" android:layout_gravity="center"/>
                            <TextView
                                    android:text="Team1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/preteam1name"
                                    android:gravity="center_horizontal|left" android:textColor="@color/textlesswhite"
                                    android:fontFamily="@font/rubik_bold" android:textSize="22sp" android:padding="2sp"
                                    android:minLines="2" android:layout_gravity="center_horizontal" android:maxLines="2"
                                    android:textAlignment="center" android:paddingStart="5sp"/>
                            <TextView
                                    android:text="Position1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/preteamposition1"
                                    android:gravity="center_horizontal|left" android:textColor="@color/textlesswhite"
                                    android:fontFamily="@font/rubik" android:textSize="12sp" android:padding="2sp"
                                    android:layout_gravity="center" android:textAlignment="center"/>
                            <TextView
                                    android:text="0-0-0"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/preteamrecord1"
                                    android:gravity="center_horizontal|left" android:textColor="@color/textlesswhite"
                                    android:fontFamily="@font/rubik" android:padding="2sp"
                                    android:layout_gravity="center" android:textAlignment="center"/>
                        </LinearLayout>
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:gravity="top" android:layout_gravity="top"
                                android:layout_marginTop="40dp">
                            <TextView
                                    android:text="VS."
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="top" android:textColor="@color/textlesswhite"
                                    android:fontFamily="@font/rubik" android:textSize="14sp" android:padding="2sp"
                                    android:layout_gravity="bottom"/>
                        </LinearLayout>
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:layout_weight="0.45">
                            <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp" app:srcCompat="@drawable/main_logo"
                                    android:id="@+id/prelogo2" android:layout_gravity="center"/>
                            <TextView
                                    android:text="Team2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/preteam2name"
                                    android:textColor="@color/textlesswhite"
                                    android:fontFamily="@font/rubik_bold" android:textSize="22sp" android:padding="2sp"
                                    android:minLines="2" android:gravity="right|center_horizontal" android:maxLines="2"
                                    android:textAlignment="center" android:paddingEnd="5sp"/>
                            <TextView
                                    android:text="Position2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/preteamposition2"
                                    android:textColor="@color/textlesswhite"
                                    android:fontFamily="@font/rubik" android:textSize="12sp" android:padding="2sp"
                                    android:gravity="right" android:layout_gravity="center"
                                    android:textAlignment="center"/>
                            <TextView
                                    android:text="0-0-0"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/preteamrecord2"
                                    android:textColor="@color/textlesswhite"
                                    android:fontFamily="@font/rubik" android:padding="2sp" android:gravity="right"
                                    android:layout_gravity="center" android:textAlignment="center"/>
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/frameLayout7"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintEnd_toEndOf="parent" android:background="@drawable/corners10"
                app:layout_constraintTop_toBottomOf="parent" android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp" android:layout_marginTop="10dp" android:layout_weight="0.5"
                android:foreground="@drawable/overview" android:foregroundTint="#23FFFFFF"
                android:layout_marginBottom="10dp" android:padding="30dp">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="Prediction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView11"
                        android:fontFamily="@font/rubik" android:textColor="@color/textlesswhite"
                        android:layout_gravity="center_horizontal"/>
                <com.github.mikephil.charting.charts.PieChart
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/pieChart" android:layout_gravity="center"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:itemTextColor="@drawable/bottom_nav_back"
            app:itemIconTint="@drawable/bottom_nav_back"
            app:itemRippleColor="@color/primaryapp"
            android:background="@color/background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu"/>


    <fragment
            android:id="@+id/nav_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:defaultNavHost="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navGraph="@navigation/mobile_navigation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>


</androidx.constraintlayout.motion.widget.MotionLayout>