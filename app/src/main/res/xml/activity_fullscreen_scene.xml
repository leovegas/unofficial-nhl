<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="2000">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnSwipe motion:touchAnchorId="@+id/frameLayout3"/>
        <OnSwipe motion:touchAnchorId="@+id/frameLayout3" motion:dragDirection="dragDown"/>
        <OnSwipe motion:touchAnchorId="@+id/frameLayout3"/>
        <OnClick motion:targetId="@id/frameLayout3"/>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint motion:layout_constraintEnd_toEndOf="parent" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    motion:layout_constraintTop_toTopOf="parent" motion:layout_constraintHorizontal_bias="0.5"
                    motion:layout_constraintStart_toStartOf="parent" android:layout_marginTop="47dp"
                    android:id="@+id/frameLayout2" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
        <Constraint motion:layout_constraintEnd_toEndOf="parent" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    motion:layout_constraintHorizontal_bias="0.0" motion:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/frameLayout3" android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    motion:layout_constraintTop_toBottomOf="@id/frameLayout2"
                    android:layout_marginTop="267dp" motion:layout_constraintBottom_toTopOf="@id/nav_view"
                    android:layout_marginBottom="57dp"/>
        <Constraint android:layout_height="60dp" motion:layout_constraintStart_toStartOf="parent"
                    motion:layout_constraintBottom_toBottomOf="parent" motion:layout_constraintHorizontal_bias="0.5"
                    motion:layout_constraintEnd_toEndOf="parent" android:layout_width="wrap_content"
                    android:id="@+id/view"/>
        <Constraint motion:layout_constraintEnd_toEndOf="parent" android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp" android:layout_marginStart="10dp"
                    motion:layout_constraintHorizontal_bias="0.5" motion:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/iceLayout"
                    android:visibility="invisible"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint motion:layout_constraintEnd_toEndOf="parent" android:layout_width="match_parent"
                    android:layout_height="300dp" android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    motion:layout_constraintHorizontal_bias="0.5" motion:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/frameLayout3" android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    motion:layout_constraintTop_toBottomOf="@+id/frameLayout2"
                    android:layout_marginTop="300dp"
                    android:visibility="invisible"
                    motion:layout_constraintBottom_toTopOf="@id/nav_view" motion:layout_constraintVertical_bias="0.0"/>
        <Constraint motion:layout_constraintEnd_toEndOf="parent" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginEnd="10dp"
                    motion:layout_constraintTop_toBottomOf="parent" android:layout_marginStart="10dp"
                    motion:layout_constraintTop_toTopOf="parent" motion:layout_constraintHorizontal_bias="0.5"
                    motion:layout_constraintStart_toStartOf="parent" android:layout_marginTop="10dp"
                    android:id="@+id/frameLayout2" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
        <Constraint android:id="@+id/iceLayout" motion:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp" motion:layout_constraintTop_toBottomOf="@+id/frameLayout2"
                    android:layout_marginStart="10dp" motion:layout_constraintHorizontal_bias="0.5"
                    motion:layout_constraintStart_toStartOf="parent" android:visibility="visible"/>
        <Constraint motion:layout_constraintEnd_toEndOf="parent" android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    motion:layout_constraintTop_toBottomOf="@+id/frameLayout2" android:layout_marginStart="10dp"
                    motion:layout_constraintHorizontal_bias="0.5" motion:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/iceLayout" android:layout_marginTop="220dp"/>
        <Constraint android:id="@+id/iceLayout" motion:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp" motion:layout_constraintTop_toBottomOf="@+id/frameLayout2"
                    android:layout_marginStart="10dp" motion:layout_constraintHorizontal_bias="0.5"
                    motion:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="10dp"/>
    </ConstraintSet>
</MotionScene>